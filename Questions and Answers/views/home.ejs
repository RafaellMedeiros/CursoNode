<%- include ("./partials/header.ejs") %>
    <div class="container">
        <h1>Perguntas</h1>
        <br>
        <a href="/perguntar" class="btn btn-primary">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <%= pergunta.titulo %>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                </div>
            </div>
                
        <% }) %>
    </div>



<%- include ("./partials/footer.ejs") %>