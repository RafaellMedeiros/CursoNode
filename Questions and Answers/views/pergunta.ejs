<%- include ("./partials/header.ejs") %>
    <div class="container">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/resposta" method="POST">
            <h3>Respostas</h3>
            <textarea name="corpo" class="form-control" placeholder="Digite Sua Resposta"></textarea>
            <br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>
<%- include ("./partials/footer.ejs") %>